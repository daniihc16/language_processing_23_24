TypeValue tipo_constante():
{
    Token char_const = null;
    Token int_const = null;
    Token bool_const = null;
    Token string_const = null;
}
{
    char_const = <tCHARCONST> {
   	 	return new TypeValue(Symbol.Types.CHAR, char_const.image.charAt(0));
    } | int_const = <tINTCONST> {
