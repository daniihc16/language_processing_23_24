    //Tipos de datos
|    < tCHAR: "character" >
|    < tBOOL: "boolean" >
|    < tINT: "integer" >
|    < tCHARCONST: "\'" ~["\n"] "\'" >
|    < tINTCONST: (<DIGIT>)+ >
|    < tTRUE: "true" >
|    < tFALSE: "false" >
|   < tSTRING: "\"" ((~["\n", "\""])* ("\"\"")? )* "\""  > {
    // quitamos la doble "" por "
    matchedToken.image = image.toString().replaceAll("\"\"", "\"");
}

    //Operadores
|    <tAND: "and" >
|    <tOR: "or" >
|    <tNOT: "not" >
|    < tPLUS: "+" >
|    < tMINUS: "-" >
|    < tTIMES: "*" >
